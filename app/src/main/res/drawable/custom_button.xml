<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/utablue"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/utablue" android:width="2dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/utablue"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/utablue" android:width="2dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/utaorange"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/utaorange" android:width="2dp"/>
        </shape>
    </item>

</selector>